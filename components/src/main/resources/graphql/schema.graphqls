type Query {
    customerById(id: ID): Customer
    customers : [Customer]
}

type Subscription {
    customers: String
    customerUpdates(id:ID): CustomerUpdate
}

type Mutation {
 addCustomer ( input :CustomerInput): Customer
}

type CustomerUpdate {
 customer: Customer!
 event: String
}

input CustomerInput {
 name : String!
}

type Customer {
    id: ID!
    name : String
    email : String
    profile: CustomerProfile
}

type CustomerProfile {
 id : ID!
}


type Query {

    customers : [Customer]
}

enum CustomerEventType {
    UPDATED
    DELETED
}

type CustomerEvent {
    customer : Customer
    event : CustomerEventType
}

type Subscription {

    customerEvents(id : ID) : CustomerEvent
}

type Mutation {
    addCustomer ( name : String) : Customer
}

type Customer {
    id : ID
    name :String
    profile:  CustomerProfile
}

type CustomerProfile {
    customerId : ID
    id : ID
}